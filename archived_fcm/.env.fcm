# FCM Configuration
# Add these to your .env file to enable FCM functionality

# Required: Firebase Cloud Messaging server key
# Get this from Firebase Console > Project Settings > Cloud Messaging > Server key
FCM_SERVER_KEY=your_fcm_server_key_here

# Optional: Firebase project ID (required for FCM v1 API)
FCM_PROJECT_ID=your_firebase_project_id

# Optional: Firebase sender ID
FCM_SENDER_ID=your_sender_id

# Optional: Path to Firebase service account key file (for FCM v1 API)
FCM_SERVICE_ACCOUNT_KEY_PATH=path/to/service-account-key.json

# Example values (replace with your actual values):
# FCM_SERVER_KEY=AAAA1234567890:APA91bH...your_actual_server_key_here
# FCM_PROJECT_ID=your-project-12345
# FCM_SENDER_ID=123456789012
